{
	"name": "create-typescript-package",
	"description": "A template project for developing & publishing TypeScript packages",
	"version": "0.0.0",
	"author": "StyleShit",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/StyleShit/create-typescript-package"
	},
	"type": "module",
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs",
			"types": "./dist/index.d.ts"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"/dist",
		"/src",
		"!**/__tests__"
	],
	"scripts": {
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"lint": "concurrently -n eslint,tsc -c magenta,green \"eslint ./\" \"tsc\"",
		"format": "prettier --write ./",
		"format:check": "prettier --check ./",
		"build": "tsup src/index.ts --format cjs,esm --dts",
		"release": "npm run build && changeset publish"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.7",
		"@eslint/js": "^9.7.0",
		"@types/eslint__js": "^8.42.3",
		"@vitest/coverage-v8": "^2.0.3",
		"concurrently": "^8.2.2",
		"eslint": "^9.7.0",
		"globals": "^15.8.0",
		"prettier": "^3.3.3",
		"tsup": "^8.2.1",
		"typescript": "^5.5.3",
		"typescript-eslint": "^7.16.1",
		"vitest": "^2.0.3"
	}
}
